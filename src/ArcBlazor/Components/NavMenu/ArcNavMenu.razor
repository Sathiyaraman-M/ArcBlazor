@namespace ArcBlazor
@using ArcBlazor.Utilities
@inherits ArcComponentBase

<div class="collapse navbar-collapse">
    <ul class="@ClassName">
        @ChildContent
    </ul>
</div>

@code
{
    private string ClassName =>
        new CssBuilder("navbar-nav")
            .AddClass(Class)
            .Build();
    
    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
